{% extends 'base.html.twig' %}

{% block body %}
    <h1>Lista użytkowników</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Username</th>
                <th>idPacjent</th>
                <th>idLekarz</th>
                <th>Groups</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('user_show', { 'id': user.id }) }}">{{ user.id }}</a></td>
                <td>{{ user.username }}</td>
                <td>{{ user.idPacjent }}</td>
                <td>{{ user.idLekarz }}</td>
                <td>
                    <ul>
                        {% for group in user.groups %}
                        <li>
                            {{ group }}
                        </li>
                        {% endfor %}
                    </ul>

                </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('user_show', { 'id': user.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('user_edit', { 'id': user.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    {#<ul>#}
        {#<li>#}
            {#<a href="{{ path('user_new') }}">Dodaj użytkownika</a>#}
        {#</li>#}
    {#</ul>#}
{% endblock %}
