<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        {% block menu %}
            <ul>
                <li><a href="{{ path('home') }}">Home</a></li>
                <li><a href="{{ path('lekarz_index') }}">Lekarze</a></li>
                <li><a href="{{ path('specjalizacja_index') }}">Specjalizacje</a></li>
                <li><a href="{{ path('lekarz_godz_przyj_index') }}">Lekarze - Godziny przyjęć</a></li>
                <li><a href="{{ path('godz_przyj_index') }}">Godziny przyjęć</a></li>
                <li><a href="{{ path('data_urlop_index') }}">Urlopy</a></li>
                <li><a href="{{ path('leki_index') }}">Leki</a></li>
                <li><a href="{{ path('pacjent_index') }}">Pacjenci</a></li>
                <li><a href="{{ path('wizyta_index') }}">Wizyty</a></li>
                <li><a href="{{ path('kalendarz') }}">Kalendarz</a></li>
                {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                    <li><a href="{{ path('fos_user_group_list') }}">Group List</a></li>
                    <li>
                        {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} |
                        <a href="{{ path('fos_user_security_logout') }}">
                            {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                        </a>
                    </li>
                {% else %}
                    <li>
                        <a href="{{ path('fos_user_security_login') }}">{{ 'layout.login'|trans({}, 'FOSUserBundle') }}</a>
                    </li>
                {% endif %}
            </ul>
        {% endblock %}
        {% block body %}{% endblock %}
        {% block javascripts %}{% endblock %}
    </body>
</html>
